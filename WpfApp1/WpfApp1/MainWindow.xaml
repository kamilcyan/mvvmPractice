<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="Fishiza" Height="350" Width="525">
    <Grid>
        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" Height="221" Margin="10,10,10,0" 
                   VerticalAlignment="Top" Stroke="Black"/>
        <Slider x:Name="sliderR" Margin="10,0,10,64" Height="22" Maximum="255" 
                VerticalAlignment="Bottom" 
                ValueChanged="SliderR_ValueChanged"/>
        <Slider x:Name="sliderG" Margin="10,0,10,37" Height="22" Maximum="255"
                VerticalAlignment="Bottom" 
                ValueChanged="SliderR_ValueChanged"/>
        <Slider x:Name="sliderB" Margin="10,0,10,10" Height="22" Maximum="255" 
                VerticalAlignment="Bottom" 
                ValueChanged="SliderR_ValueChanged"/>
    </Grid>
</Window>
